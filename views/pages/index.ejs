<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daestro</title>

    <!-- CSS Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <!-- JSS Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <!--JSS W3 schools-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        body {
            background-image: url('img/webimage.png');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            font-family: monospace;
            font-size: larger;
        }
        
        .feather {
            width: 18px;
            height: 18px;
        }
        
        .middle {
            padding-left: 5%;
            padding-top: 100px;
        }
        
        .header {
            color: white;
            margin-top: 10%;
        }
        
        .w3-row-padding img {
            margin-bottom: 12px
        }
        
        .card-body {
            color: black
        }
    </style>
</head>

<body>
    <header>
        <%- include('../layouts/navbar.ejs'); %>
    </header>
    <main>
        <!-- Slider -->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width: 100%;">
            <div style="padding-top: 66px;">
                <div class="col-13">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="../img/EXTRA.png" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="../img/EXTRA1.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="../img/EXTRA2.png" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <br>
        <br>
        <!-- Photo Grid-->
        <hr>
        <h3 class="text-center"><b>OUR MODELS</b></h3>
        <hr><br><br>
        <div class="w3-row" id="myGrid" style="margin-bottom:5%; margin-left: 2%;">
            <div class="w3-third">
                <img src="../img/model/L model1.jpg" style="width:50%;">
                <img src="../img/model/P model4.jpg" style="width:22%">
                <img src="../img/model/L model5.jpg" style="width: 25%;">

            </div>

            <div class="w3-third">
                <img src="../img/model/P model3.jpg" style="width: 24%;">
                <img src="../img/model/L model2.jpg" style="width:48%">
                <img src="../img/model/L model7.jpg" style="width: 24.8%;">
            </div>
        </div>
        </div>

        <!-- Mini PR -->
        <hr>
        <h3 class="text-center"><b>BEST SELLER</b></h3>
        <hr>
        <div class="container mt-5">
            <div class="card-group">
                <div class="card ">
                    <a href='/shirt/Cotton_Shirt'>
                        <img src="../img/shirt/Airy Cotton Shirt - Light Yellow.jpg" class="img-fluid" alt="a1">
                        <div class="card-body">
                            <h5 class="card-title">Cotton Shirt</h5>
                            <p class="card-text">Rp 129000</p>
                        </div>
                </div>
                </a>
                <div class="card ">
                    <a href='/bags/Waist_Bag'>
                        <img src="../img/bag/Chain-detail Waist Bag - Light Brown.jpg" class="img-fluid" alt="b1">
                        <div class="card-body">
                            <h5 class="card-title">Waist Bag</h5>
                            <p class="card-text">Rp 179000</p>
                        </div>
                </div>
                </a>
                <div class="card ">
                    <a href='/hoodie/Cotton_Hoodie'>
                        <img src="../img/hoodie/Black Relaxed Fit Hoodie.jpg" class="img-fluid" alt="c1">
                        <div class="card-body">
                            <h5 class="card-title">Cotton Hoodie</h5>
                            <p class="card-text">Rp 229000</p>
                        </div>
                </div>
                </a>
                <div class="card ">
                    <a href='/t-shirt/Printed_T-Shirt'>
                        <img src="../img/t-shirt/Be Printed T-shirt - White.jpg" class="img-fluid" alt="d1">
                        <div class="card-body">
                            <h5 class="card-title">Printed T-Shirt</h5>
                            <p class="card-text">Rp 99000</p>
                        </div>
                </div>
                </a>
                <div class="card">
                    <a href='/pants/Ankle_Length'>
                        <img src="../img/pants/Ankle length Slacks.jpg" class="img-fluid" alt="e1">
                        <div class="card-body">
                            <h5 class="card-title">Ankle Length</h5>
                            <p class="card-text">Rp 99000</p>
                        </div>
                </div>
                </a>
            </div>
        </div>
        <br>
        <br>

        <!-- Subscribe section -->
        <div class="container bg-dark" style="padding: 3%; color: white;">
            <h1>Subscribe</h1>
            <p>To get special offers and VIP treatment:</p>
            <form action="/subscribe" , method="post">
                <p><input id="subs" class="w3-input w3-border" name="email" type="text" placeholder="Enter e-mail" style="width:100%">
                    <span id="subs_r"></span>
                </p>

                <button type="submit" id="subs_b" class="btn btn-light w3-btn margin-bottom" onclick="ClickSubscribe()">Subscribe</button>
            </form>
        </div>
        <br>
        <br>
    </main>

    <footer>
        <%- include('../layouts/footer.ejs'); %>
    </footer>

    <!-- feather icons -->
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="subscribe.js"></script>

    <script>
        feather.replace()
    </script>
    <script>
        // Toggle grid padding
        function myFunction() {
            var x = document.getElementById("myGrid");
            if (x.className === "w3-row") {
                x.className = "w3-row-padding";
            } else {
                x.className = x.className.replace("w3-row-padding", "w3-row");
            }
        }
        document.getElementById("myBtn").click();
    </script>
</body>

</html>